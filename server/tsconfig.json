{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "rootDirs": ["./src", "../shared"],
        "outDir": "./dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "~/shared/*": ["../shared/*"]
        }
    },
    "include": ["src/**/*", "../shared/**/*"],
    "exclude": ["node_modules"]
}
